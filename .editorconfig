# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files - matches ruff defaults
[*.py]
indent_style = space
indent_size = 4

# Shell scripts - matches shfmt defaults
[*.{sh,bash}]
indent_style = tab
